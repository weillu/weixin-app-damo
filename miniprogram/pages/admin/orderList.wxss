.pop_title {
  padding:100rpx 0 20rpx 32rpx;
  font-size:36rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.pop_btn {
  padding:20rpx 0 20rpx 32rpx;
}
.right20 {
  margin-right:20rpx;
}
.itemline {
  position:relative;
  color: #323233;
  font-size:28rpx;
  line-height: 48rpx;
  border-bottom:2rpx solid #ebedf0;
  padding:20rpx 32rpx 20rpx 32rpx;
}
.itemline .line-left {
  display: inline-block;
  width: 180rpx;
  height: 48rpx;
  float: left;
}
.itemline .line-right {
  display: inline-block;
  width: 40%;
  height: 48rpx;
}
.itemline .line-right image{
  width: 180rpx;
  height: 180rpx;
}
.order-item {
  padding:10rpx 0 10rpx 0;
  border-bottom:2rpx solid #ebedf0;
}
.order-item .item-center {
  padding:0rpx 34rpx 0rpx 34rpx;
}
.order-item .item {
  font-size:24rpx;
  line-height: 40rpx;
  height: 40rpx;
}
.footer {
  text-align: right;
}
.footer van-button {
  margin-left:20rpx;
}
.empty {
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
  padding-top:40rpx;
}